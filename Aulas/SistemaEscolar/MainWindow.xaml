<Window x:Class="SistemaEscolar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaEscolar"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textBlockTituloMainWindow" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="O que você quer fazer?" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="buttonPagCadastrarAluno" Content="Cadastrar Alunos" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="96" Height="53" FontSize="14" FontFamily="Sitka Banner"/>
        <Button x:Name="buttonInserirNotas" Content="Inserir Notas" HorizontalAlignment="Left" Margin="139,102,0,0" VerticalAlignment="Top" Width="96" Height="53"/>
        <Button x:Name="buttonPagGerarBoletim" Content="Gerar Boletim" HorizontalAlignment="Left" Margin="270,102,0,0" VerticalAlignment="Top" Width="96" Height="53"/>
        <Button x:Name="buttonPagListarAlunos" Content="Listar Alunos" HorizontalAlignment="Left" Margin="393,102,0,0" VerticalAlignment="Top" Width="96" Height="53"/>

    </Grid>
</Window>